@model DonateryWeb_Appr.Models.DonationOfGoodsCategory

@{
    ViewData["Title"] = "Add A New Category Of Goods";
}

<div class="text-center mt-5">
    <h1>Add A New Category Of Goods</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="AddANewCategoryOfGoods">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DonationCategoryName" class="control-label">Donation Category Name</label>
                    <input asp-for="DonationCategoryName" class="form-control" />
                    <span asp-validation-for="DonationCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Category" class="btn btn-primary w-100" style="background-color:#AA1AED" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}