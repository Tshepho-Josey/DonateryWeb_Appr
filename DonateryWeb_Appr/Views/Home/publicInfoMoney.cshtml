@model IEnumerable<DonateryWeb_Appr.Models.AllocationOfMoney>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Money Allocation Information</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #495057;
            margin: 20px;
        }

        h2 {
            color: #AA1AED;
            text-align: center;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        .btn-view {
            display: block;
            width: 100%;
            padding: 10px;
            text-align: center;
            color: #fff;
            background-color: #AA1AED;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }

            .btn-view:hover {
                background-color: #8116a1;
            }

        .back-to-home {
            margin-top: 20px;
            text-align: center;
        }

            .back-to-home a {
                color: #AA1AED;
                text-decoration: none;
            }

                .back-to-home a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <h2>Money Allocation Information</h2>
    <h2>Money Available: R @ViewBag.moneyLeft</h2>
    <h2>Goods Available: @ViewBag.goodsLeft</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Date of Allocation</th>
                <th>Amount Allocated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Disaster.DisasterLocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOfAllocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.AmountAllocated)</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="publicInfoGoods" class="btn-view" type="button">View Goods Allocated to Disasters</a>

    <div class="back-to-home">
        <a asp-action="Index">Back to Home</a>
    </div>
</body>
</html>