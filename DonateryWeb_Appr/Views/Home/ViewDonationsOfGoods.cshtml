@model IEnumerable<DonateryWeb_Appr.Models.DonationOfGood>

@{
    ViewData["Title"] = "View Donations Of Goods";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Donations Of Goods</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #495057;
            margin: 20px;
        }

        h1 {
            color: #AA1AED;
            text-align: center;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }

        .back-to-home {
            margin-top: 20px;
            text-align: center;
        }

            .back-to-home a {
                color: #AA1AED;
                text-decoration: none;
            }

                .back-to-home a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <h1>View Donations Of Goods</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Number of Items</th>
                <th>Description</th>
                <th>Donor</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DonationDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonationNumberOfItems)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonationDescription)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonationDonor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.DonationCategoryName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DonationId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DonationId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DonationId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="back-to-home">
        <a asp-action="Index">Back to Home</a>
    </div>
</body>
</html>